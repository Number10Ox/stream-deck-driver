{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "streamdeck_driver_schema.json",
	"type": "object",
	"properties": {
		"folders": {
			"id": "/properties/folders",
			"type": "array",
			"items": {
				"id": "/properties/folders/items",
				"type": "object",
				"properties": {
					"folder_contents": {
						"id": "/properties/folders/items/properties/folder_contents",
						"type": "array",
						"items": {
							"id": "/properties/folders/items/properties/folder_contents/items",
							"type": "object",
							"properties": {
								"command": {
									"id": "/properties/folders/items/properties/folder_contents/items/properties/command",
									"type": "string"
								},
								"image": {
									"id": "/properties/folders/items/properties/folder_contents/items/properties/image",
									"type": "string"
								},
								"key_id": {
									"id": "/properties/folders/items/properties/folder_contents/items/properties/key_id",
