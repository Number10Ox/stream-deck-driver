		"streamdeck_info": {
			"id": "/properties/streamdeck_info",
			"type": "object",
			"properties": {
				"main_folder_key_ids": {
					"id": "/properties/streamdeck_info/properties/main_folder_key_ids",
					"type": "array",
					"items": {
						"id": "/properties/streamdeck_info/properties/main_folder_key_ids/items",
						"type": "integer",
						"minimum": 0,
						"maximum": 1
					}
				}
			},
			"required": [
				"main_folder_key_ids"
			]
		}
	},
	"required": [
		"streamdeck_info"
	],
	"definitions": {}
